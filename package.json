{
  "name": "design-ai",
  "private": true,
  "version": "1.0.0",
  "description": "Next.js Fabric Editor with AI-powered design tools",
  "scripts": {
    "dev": "pnpm --filter next-editor dev",
    "build": "pnpm --filter next-editor build",
    "start": "pnpm --filter next-editor start",
    "build:core": "pnpm -C packages/core build",
    "test": "pnpm -C packages/core test",
    "prepare": "husky install"
  },
  "workspaces": [
    "packages/*",
    "next-editor"
  ],
  "devDependencies": {
    "@commitlint/cli": "^17.4.2",
    "@commitlint/config-conventional": "^17.4.2",
    "husky": "^8.0.0",
    "lint-staged": "^13.1.1",
    "typescript": "5.1.6"
  },
  "pnpm": {
    "overrides": {
      "@jridgewell/gen-mapping": "0.3.5"
    }
  },
  "packageManager": "pnpm@10.21.0"
}
